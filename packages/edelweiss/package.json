{
	"name": "@prostory/edelweiss",
	"version": "2.1.0-alpha.14",
	"description": "Small library that builds HTML from JS.",
	"keywords": [
		"Edelweiss",
		"UI framework"
	],
	"main": "./mod.js",
	"exports": {
		".": "./mod.js",
		"./mod": "./mod.js",
		"./mod.js": "./mod.js"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/YevhenKap/edelweiss"
	},
	"scripts": {
		"test": "uvu -r tsm tests",
		"clean": "rimraf build/*",
		"prebuild": "npm run clean",
		"build": "node esbuild.config.js && tsc",
		"postbuild": "npm run copy",
		"copy": "npm run copy:docs; npm run copy:settings; npm run copy:license",
		"copy:docs": "cpy README.md build/",
		"copy:license": "cpy ../../LICENSE build/",
		"copy:settings": "cpy package.json build/",
		"prerelease": "npm run build",
		"release": "cd build && npm publish --access public",
		"prerelease:next": "npm run build",
		"release:next": "cd build && npm publish --access public --tag next"
	},
	"author": "Kapelianovych Yevhen",
	"license": "MIT"
}

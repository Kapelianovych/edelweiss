{
	"name": "edelweiss",
	"type": "module",
	"private": true,
	"description": "A couple of libraries that help constructing web applications.",
	"scripts": {
		"clean": "npm run clean --workspaces",
		"prebuild": "npm run test",
		"build": "npm run build --workspaces",
		"release:edelweiss": "npm run release -w @prostory/edelweiss",
		"release:edelweiss-next": "npm run release:next -w @prostory/edelweiss",
		"release:edelweiss-cli": "npm run release -w @prostory/edelweiss-cli",

		"jest": "^27.5.1",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.67.2",
		"rollup-plugin-terser": "^7.0.2",
		"ts-jest": "^27.1.3",
		"tslib": "^2.4.0",
